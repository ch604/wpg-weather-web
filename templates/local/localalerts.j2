<div class="slider-item local-alerts">
	{# local alerts #}
	{% include 'local/localheader.j2' %}
	<p style="text-align:center;">WEATHER ADVISORIES</p>
	<p>{{ weather_data.alerts['features']|length }} ACTIVE WEATHER ALERTS</p>
	{% if weather_data.alerts['features']|length > 0 %}
		<br>
		{% for i in weather_data.alerts['features'] %}
			<p>{{ i['properties']['parameters']['NWSheadline'][0].upper() }}</p>
			<br>
		{% endfor %}
	{% endif %}
</div>
